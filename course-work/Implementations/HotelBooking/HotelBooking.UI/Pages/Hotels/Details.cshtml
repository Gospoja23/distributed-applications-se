@page "{id:int}"
@model HotelBooking.UI.Pages.Hotels.DetailsModel
@{
    ViewData["Title"] = "Детали отеля";
}

<h1>Детали отеля</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Model.Hotel.Name</dd>

        <dt class="col-sm-2">Адрес</dt>
        <dd class="col-sm-10">@Model.Hotel.Address</dd>

        <dt class="col-sm-2">Телефон</dt>
        <dd class="col-sm-10">@Model.Hotel.PhoneNumber</dd>

        <dt class="col-sm-2">Звезды</dt>
        <dd class="col-sm-10">@Model.Hotel.Stars</dd>
    </dl>
    <a asp-page="Index" class="btn btn-secondary">Назад к списку</a>
    <a asp-page="Edit" asp-route-id="@Model.Hotel.Id" class="btn btn-primary">Редактировать</a>
</div>
