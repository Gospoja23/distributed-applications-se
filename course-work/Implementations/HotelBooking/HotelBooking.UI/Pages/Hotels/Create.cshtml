@page
@model HotelBooking.UI.Pages.Hotels.CreateModel
@{
    ViewData["Title"] = "Добавить отель";
}

<h1>Добавить отель</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Hotel.Name"></label>
        <input asp-for="Hotel.Name" class="form-control" />
        <span asp-validation-for="Hotel.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hotel.Address"></label>
        <input asp-for="Hotel.Address" class="form-control" />
        <span asp-validation-for="Hotel.Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hotel.PhoneNumber"></label>
        <input asp-for="Hotel.PhoneNumber" class="form-control" />
        <span asp-validation-for="Hotel.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hotel.Stars"></label>
        <input asp-for="Hotel.Stars" class="form-control" type="number" />
        <span asp-validation-for="Hotel.Stars" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-page="Index" class="btn btn-secondary">Отмена</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
