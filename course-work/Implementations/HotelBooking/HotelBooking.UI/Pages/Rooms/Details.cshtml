@page "{id:int}"
@model HotelBooking.UI.Pages.Rooms.DetailsModel
@{
    ViewData["Title"] = "Детали номера";
}

<h1>Детали номера</h1>

<dl class="row">
    <dt class="col-sm-2">HotelId</dt>
    <dd class="col-sm-10">@Model.Room.HotelId</dd>

    <dt class="col-sm-2">Тип</dt>
    <dd class="col-sm-10">@Model.Room.Type</dd>

    <dt class="col-sm-2">Цена за ночь</dt>
    <dd class="col-sm-10">@Model.Room.PricePerNight</dd>

    <dt class="col-sm-2">Доступен</dt>
    <dd class="col-sm-10">@Model.Room.IsAvailable</dd>
</dl>

<a asp-page="Index" class="btn btn-secondary">Назад</a>
<a asp-page="Edit" asp-route-id="@Model.Room.Id" class="btn btn-primary">Редактировать</a>
