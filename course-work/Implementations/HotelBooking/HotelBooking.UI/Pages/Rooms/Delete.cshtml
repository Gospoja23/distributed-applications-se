@page "{id:int}"
@model HotelBooking.UI.Pages.Rooms.DeleteModel
@{
    ViewData["Title"] = "Удалить номер";
}

<h1>Удалить номер</h1>

<div class="alert alert-danger">
    Вы уверены, что хотите удалить этот номер?
</div>

<dl class="row">
    <dt class="col-sm-2">HotelId</dt>
    <dd class="col-sm-10">@Model.Room.HotelId</dd>

    <dt class="col-sm-2">Тип</dt>
    <dd class="col-sm-10">@Model.Room.Type</dd>

    <dt class="col-sm-2">Цена</dt>
    <dd class="col-sm-10">@Model.Room.PricePerNight</dd>

    <dt class="col-sm-2">Свободен</dt>
    <dd class="col-sm-10">@Model.Room.IsAvailable</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Room.Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-page="Index" class="btn btn-secondary">Отмена</a>
</form>
